{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "allowJs": true,
    "declaration": true,
    "outDir": "./umd/",
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/*"
  ],
  "typedocOptions": {
    "entryPoints": [
      "./src/index.ts"
    ],
    "out": "docs"
  }
}
